<div id="variants">
  <ul class="list-group">
    <% @groups.each do |group| %>
        <a class="list-group-item" href="#!" data-toggle="collapse" data-parent="#variants" data-target="#group-<%= group.id %>" >
          <%= group.title %>
        </a>
        <div id="group-<%= group.id %>" class="list-group collapse">
            <% group.products.each do |product| %>
              <div id="product-<%= product.id %>" class="list-group <%= product.css_classes %>">
                <% product.variants.each do |variant| %>
                      <div class="row list-group-item">
                        <div class="col col-md-1 col-sm-1">
                          <% if variant.has_color? %>
                              <img src="<%= asset_url('color-wheel.png') %>" width="16" height="16"/>
                          <% end %>
                        </div>
                        <div class="col col-md-1 col-sm-1">
                          <% if variant.has_cover_up? %>
                              <span style="border: 1px solid #222;padding-left: 2px;padding-right: 2px;color: #444;">C</span>
                          <% end %>
                        </div>
                        <div class="col col-md-4 col-sm-3">
                          <%= variant.price %>
                        </div>
                        <% url = "http://#{@host}:#{@port}/public/redirect/#{product.handle}/#{variant.id}?clientId=&linkerParam=&_ga=&uid=" %>
                        <div class="col col-md-4 col-sm-4">
                          <button class="btn btn-sm btn-url" data-title="<%= product.title %>"
                                  data-clipboard-text="<%= url %>" title="Copy to clipboard"><%= product.is_deposit? && 'Deposit' || 'Final' %></button>
                        </div>
                      </div>
                <% end %>
              </div>

            <% end %>
        </div>
    <% end %>
  </ul>
</div>
