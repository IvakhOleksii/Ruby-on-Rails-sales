<h1><%= @marketing_email.template_name.titleize %></h1>
<%= link_to "Edit", edit_admin_marketing_email_path(@marketing_email), class: "pull-right btn btn-xs btn-secondary" %>
<table class="table">
  <tr>
    <td>From:</td>
    <td><%= @marketing_email.from %></td>
  </tr>
  <tr>
    <td>Subject:</td>
    <td><%= @marketing_email.subject_line %></td>
  </tr>
  <tr>
    <td colspan="2">
      <%= @marketing_email.html_content(@request, @variant).html_safe %>
    </td>
  </tr>
</table>