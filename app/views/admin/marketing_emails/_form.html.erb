<%= simple_form_for [:admin, @marketing_email] do |f| %>
  <%= f.input :from, required: true %>
  <%= f.input :subject_line, required: true %>

  <%= f.input :markdown_content, as: :text, required: true, input_html: { rows: 30 } %>

  <%= f.submit class: " btn btn-sm btn-danger pull-right", confirm: "Are you sure?" %>
<% end %>